@using HousePlans.Models.Home

@model EmailModel

<div class="container bootstrap snippets bootdeys">
    <div class="row text-center">
        <div class="col-sm-4">
            <div class="contact-detail-box">
                <i class="fa fa-th fa-3x text-colored"></i>
                <h4>Свържете се с нас</h4>
                <abbr title="Phone"><i class="fa fa-phone mr-4"></i></abbr> (+359) 897025221<br>
                <i class="fa fa-envelope mr-4"></i> <a href="mailto:di.officeusa@gmail.com" class="text-muted">di.officeusa@gmail.com</a>
            </div>
        </div><!-- end col -->

        <div class="col-sm-4">
            <div class="contact-detail-box">
                <i class="fa fa-map-marker fa-3x text-colored"></i>
                <h4>Адрес</h4>

                <address>
                    ул.Георги Русев 26<br>
                    София<br>
                </address>
            </div>
        </div><!-- end col -->

        <div class="col-sm-4">
            <div class="contact-detail-box">
                <i class="fa fa-book fa-3x text-colored"></i>
                <h4>24x7 Support</h4>

                <p>Industry's standard dummy text.</p>
                <h4 class="text-muted">+359897025221</h4>
            </div>
        </div><!-- end col -->

    </div>
    <!-- end row -->


    <div class="row">
        <div class="col-sm-6">
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2935.0977604108184!2d23.335276815699114!3d42.63808742549017!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa84044557e321%3A0xb3d4f13627523c59!2zdWwuICJHZW9yZ2kgUnVzZXYiIDI2LCAxNzM0INC2LtC6LiDQnNCw0LvQuNC90L7QstCwINC00L7Qu9C40L3QsCwgU29maWE!5e0!3m2!1sen!2sbg!4v1642600282414!5m2!1sen!2sbg" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div><!-- end col -->
        <!-- Contact form -->
        <div class="col-sm-6">
            <form role="form" name="ajax-form" id="ajax-form" method="post" class="form-main">

                <div class="form-group">
                    <label asp-for="Name">Име</label>
                    <input asp-for="Name" class="form-control" id="name2" type="text">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div> <!-- /Form-name -->

                <div class="form-group mt-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="email2" type="text">
                    <span asp-validation-for="Email" class="small text-danger"></span>

                </div> <!-- /Form-email -->

                <div class="form-group mt-3">
                    <label asp-for="Phone">Телефон</label>
                    <input asp-for="Phone" class="form-control" id="email2" type="text">
                    <span asp-validation-for="Phone" class="small text-danger"></span>

                </div>

                <div class="form-group mt-3">
                    <label asp-for="Subject">Тема</label>
                    <input asp-for="Subject" class="form-control" id="email2" type="text">
                    <span asp-validation-for="Subject" class="small text-danger"></span>

                </div>

                <div class="form-group mt-3">
                    <label asp-for="Content">Съобщение</label>
                    <textarea asp-for="Content" class="form-control" rows=5></textarea>
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div> <!-- /col -->

                <div class="row">
                    <div class="col-xs-12">
                        <div id="ajaxsuccess" class="text-success">E-mail was successfully sent.</div>
                        <div class="error" id="err-form" style="display: none;">There was a problem validating the form please check!</div>
                        <div class="error" id="err-timedout">The connection to the server timed out!</div>
                        <div class="error" id="err-state"></div>
                        <button type="submit" class="btn btn-primary btn-shadow btn-rounded w-md mt-3" id="send">Submit</button>
                    </div> <!-- /col -->
                </div> <!-- /row -->

            </form> <!-- /form -->
        </div> <!-- end col -->

    </div> <!-- end row -->

</div>